

{
  "compilerOptions": {
    "target": "es2016",                      // Specifies ECMAScript target version.
    "module": "commonjs",                    // Specifies the module code generation method.
    "outDir": "./dist",                      // Output directory for compiled files.
    "rootDir": "./src",                      // Root directory of input files.
    "esModuleInterop": true,                 // Enables interoperability between CommonJS and ES modules.
    "forceConsistentCasingInFileNames": true, // Enforces consistent casing for imports.
    "strict": true,                          // Enables all strict type-checking options.
    "skipLibCheck": true                     // Skips type checking of declaration files.
  },
  "include": [
    "src/**/*.ts",                           // Includes all TypeScript files in the `src` directory.
    "node_modules/@prisma/client"            // Explicitly includes Prismaâ€™s client types.
  ],
  "exclude": [
    "node_modules",                          // Excludes the `node_modules` directory from compilation.
    "dist"                                   // Excludes the `dist` directory from compilation.
  ]
}
